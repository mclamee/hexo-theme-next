// Custom styles.

.c-duoshuo-hot-artical{
	+mobile() {
    margin-left: 8%;
  }
}

// 视频音频分享class
.iframe-video{
	width: 510px;
	height: 498px;
	+mobile(){
		width: 200px;
		height: 180px;
	}
}

// 打赏开始
.support-author {
	margin-top: 40px;
	margin-right: auto;
	margin-left: auto;
	padding: 25px;
	margin-bottom: 40px;
	background-color: whitesmoke;
	border-left: 4px solid #f57e42;
	box-sizing: border-box;
	box-shadow: 0 0 1px #d9d9d9;
	
	p {
		margin: 0 auto 10px;
		font-size: 17px;
		font-weight: bold;
		+mobile(){
			width: auto;
		}
	}
	
	.btn-pay {
		color: white;
		border-color: #f57e42;
		background: #f57e42;
	}
	
	.hidden {
		display: none;
	}
}

#donate_guide {
	a {
		border: 0px;
		padding-left: 8%;
		display: inline-block;
		_display:inline;
		*display:inline;
		zoom:1;
	}
	
	span {
		vertical-align: middle;
		text-align: center;
		width: 200px;
		float: left;
		font-size: 12px;
	}
	
	.collapse {
		cursor: pointer;
	}
}
// 打赏结束